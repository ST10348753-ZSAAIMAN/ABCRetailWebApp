@model string

<h2>Delete Blob</h2>

<div>
    <h4>Are you sure you want to delete this blob?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Blob Name
        </dt>
        <dd class="col-sm-10">
            @Model
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="@Model" name="blobName" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
